<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_image_relation_form" model="ir.ui.view">
        <field name="model">product.image.relation</field>
        <field name="arch" type="xml">
            <form string="Association">
                <group name="action" attrs="{'invisible': [('id', '!=', False)]}">
                    <group>
                        <field name="id" invisible="1" />
                        <field name="add_type" string="What do you want to do?" />
                        <field
                            name="image_id"
                            options="{'no_create': True, 'no_create_edit': True}"
                            attrs="{'invisible': [('add_type', '!=', 'select')], 'required': [('add_type', '=', 'select')]}"
                        />
                    </group>
                    <group attrs="{'invisible': [('add_type', '!=', 'add')]}">
                        <field
                            name="add_image"
                            widget="image"
                            filename="add_image_name"
                            nolabel="1"
                            colspan="4"
                        />
                        <field
                            name="add_image_name"
                            placeholder="image-name.jpg"
                            nolabel="1"
                        />
                    </group>
                </group>
                <group>
                    <field
                        name="image_url"
                        widget="image_url"
                        nolabel="1"
                        colspan="4"
                        attrs="{'invisible': [('id', '=', False), ('add_type', '=', 'add')]}"
                    />
                </group>
                <group>
                    <field
                        name="tag_id"
                        context="{'active_model': context.get('active_model')}"
                    />
                    <field
                        name="available_attribute_value_ids"
                        invisible="1"
                        widget="many2many_tags"
                    />
                    <field
                        name="attribute_value_ids"
                        domain="[('id', 'in', available_attribute_value_ids)]"
                        widget="many2many_tags"
                        attrs="{'invisible': [('available_attribute_value_ids', '=', [])]}"
                    />
                </group>
            </form>
        </field>
    </record>
    <record id="product_image_relation_kanban" model="ir.ui.view">
        <field name="model">product.image.relation</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="image_name" />
                <field name="image_url" />
                <field name="add_image" />
                <field name="attribute_value_ids" />
                <field name="sequence" widget="handle" />
                <field name="image_id" invisible="1" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_vignette oe_semantic_html_override">
                            <a
                                t-if="! read_only_mode"
                                type="delete"
                                style="position: absolute; right: 0; padding: 4px; diplay: inline-block"
                            >X</a>
                            <a type="open">
                                <img
                                    t-att-src="record.image_url.value"
                                    class="oe_kanban_image"
                                    t-att-alt="record.alt_name"
                                />
                            </a>
                            <div class="oe_kanban_details">
                                <h4>
                                    <a type="open">
                                        <field name="image_name" />
                                    </a>
                                </h4>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
