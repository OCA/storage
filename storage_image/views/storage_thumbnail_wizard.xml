<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record id="storage_image_thumbnail_wizard" model="ir.ui.view">
        <field name="model">storage.thumbnail.wizard</field>
        <field name="arch" type="xml">
            <form string="Thumbnail">
                <group name="main">
                    <field name="size_x" />
                    <field name="size_y" />
                </group>
                <footer>
                    <button name="create_thumb" string="Create"
                        type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancel" class="oe_link"/>
                </footer>
           </form>
        </field>
    </record>

    <record id="action_wiz_create_thumbnail" model="ir.actions.act_window">
        <field name="name">Create a thumbnail</field>
        <field name="res_model">storage.thumbnail.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</data>
</openerp>