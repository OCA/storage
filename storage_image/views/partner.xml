<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                 <xpath expr="//page[@name='internal_notes']//field[@name='comment']" position="before">
                    <field name="image_ids" mode="kanban">
                        <tree>
                            <field name="name" />
                            <field name="alt_name" />
                            <field name="thumbnail_ids" />
                        </tree>
                        <kanban>
                            <field name="name" />
                            <field name="alt_name" />
                            <field name="image_small" />
                            <templates>
                                <t t-name="kanban-box">
                                    <div class="oe_kanban_vignette oe_semantic_html_override">
                                        <a type="open"><img t-att-src="kanban_image('storage.image', 'image_small', record.id.value)" class="oe_kanban_image"/></a>
                                        <div class="oe_kanban_details">
                                            <h4>
                                                <a type="open">
                                                     <field name="name"/>
                                                     (<field name="alt_name"/>)
                                                </a>
                                            </h4>
                                        </div>
                                    </div>
                                </t>
                            </templates>
                        </kanban>
                    </field>
                        <button string="associate" type="action" name="%(action_wiz_associate)d" />
                    <p>Bih</p>
                 </xpath>
            </field>
        </record>

        <record id="view_image_form" model="ir.ui.view">
            <field name="model">storage.image</field>
            <field name="arch" type="xml">
                <form string="Image">
                    <group string="Name">
                        <field name="name" />
                        <field name="alt_name" />
                    </group>
                    <field name="backend_id" />
                    <field name="thumbnail_ids" />
                    <field name="id" />

                    <p>Img small : <field name="image_small" widget="image" /></p>

                    <field name="image_medium" string="image" />
                    <p>Public url : <field name="public_url" /></p>
                </form>
            </field>
        </record>

        <record id="view_thumbnail_form" model="ir.ui.view">
            <field name="model">storage.thumbnail</field>
            <field name="arch" type="xml">
                <form string="Thumgnail">
                    <group string="Name">
                        <field name="name" />
                    </group>
                    <field name="url"/>
                    <field name="original_id" />
                    <field name="public_url"/>
                </form>
            </field>
        </record>



    <record id="view_view_view" model="ir.ui.view">
        <field name="name">wizard add image to a partner</field>
        <field name="model">res.partner.wizard</field>
        <field name="arch" type="xml">
            <form string="Add image to partner">
                <group name="main">
                    <field name="name" />
                    <field name="alt_name" />
                    <field name="the_file" />
                </group>
                <footer>
                    <button name="associate" string="Accociate"
                        type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancel" class="oe_link"/>
                </footer>
           </form>
        </field>
    </record>

    <record id="action_wiz_associate" model="ir.actions.act_window">
        <field name="name">Upload an image to a partner</field>
        <field name="res_model">res.partner.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
       <field name="target">new</field>
    </record>



    </data>
</openerp>