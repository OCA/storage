<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="storage_image_product_public_category_form" model="ir.ui.view">
        <field name="name">storage.image.product.public.category.form</field>
        <field name="model">storage.image</field>
        <field name="inherit_id" ref="storage_image.storage_image_view_form" />
        <field name="arch" type="xml">
            <page name="categories" position="after">
                <page name="public_categories" string="Public Categories">
                    <field name="public_category_relation_ids" mode="tree,form,kanban">
                        <tree>
                            <field name="public_category_id" />
                            <field name="tag_id" widget="many2many_tags" />
                        </tree>
                        <form>
                            <group>
                                <field name="public_category_id" />
                                <field name="tag_id" widget="many2many_tags" />
                            </group>
                        </form>
                    </field>
                </page>
            </page>
        </field>
    </record>
</odoo>
